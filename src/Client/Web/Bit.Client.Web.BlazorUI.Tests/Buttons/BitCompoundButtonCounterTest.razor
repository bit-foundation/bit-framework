<BitCompoundButton OnClick="IncrementCount"
                   IsEnabled="BitCompoundButtonIsEnabled"
                   Text="Test"
                   SecondaryText="Second Text"
                   ButtonStyle="@BitCompoundButtonStyle">
</BitCompoundButton>

@code {
    [Parameter] public bool BitCompoundButtonIsEnabled { get; set; }
    [Parameter] public ButtonStyle BitCompoundButtonStyle { get; set; }

    public int CurrentCount { get; set; }

    public void IncrementCount(MouseEventArgs e)
    {
        CurrentCount++;
    }

}
