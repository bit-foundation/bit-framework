<CascadingValue Value="Visual">
    <BitChoiceGroup Name="@Name" IsEnabled="@IsEnabled" OnValueChange="ValueChangeEvent">
        <BitChoiceOption OnClick="ClickEvent" Value="@Value"></BitChoiceOption>
    </BitChoiceGroup>
</CascadingValue>
@code {
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public bool IsEnabled { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public string Value { get; set; }

    public int CurrentCount { get; set; }
    public string ValueChangeMessage { get; set; } = "";

    public void ClickEvent(MouseEventArgs e)
    {
        CurrentCount++;
    }
    public void ValueChangeEvent(string value)
    {
        ValueChangeMessage = value;
    }
}
