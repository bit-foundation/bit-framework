<CascadingValue Value="Visual">
    <BitChoiceGroup Name="@Name"
                    IsEnabled="@IsEnabled"
                    OnValueChange="HandleValueChange">
        <BitChoiceOption OnClick="HandleClick" Value="@Value"></BitChoiceOption>
    </BitChoiceGroup>
</CascadingValue>
@code {
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public bool IsEnabled { get; set; }
    [Parameter] public string Name { get; set; }
    [Parameter] public string Value { get; set; }

    public int CurrentCount { get; set; }
    public string ChangedValue { get; set; } = "";

    public void HandleClick(MouseEventArgs e)
    {
        CurrentCount++;
    }
    public void HandleValueChange(string value)
    {
        ChangedValue = value;
    }
}
