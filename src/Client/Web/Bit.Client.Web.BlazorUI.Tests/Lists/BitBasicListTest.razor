<CascadingValue Value="Visual">
    <BitBasicList Items="Items" LoadingText="@LoadingText" Virtualize="Virtualize"
                  Role="@Role" Style="@ListHeight">
        <RowTemplate Context="person">
            <div style="@ItemHeight" class="list-item">
                <p>Id : <strong>@person.Id</strong></p>
                <p>Full Name :<strong>@person.FirstName @person.LastName</strong>  </p>
                <p>Job: <strong>@person.Job</strong></p>
            </div>
        </RowTemplate>
    </BitBasicList>
</CascadingValue>


@code {
    [Parameter] public Visual Visual { get; set; }
    [Parameter] public ICollection<Person> Items { get; set; }
    [Parameter] public int? ItemPerPage { get; set; }
    [Parameter] public string Role { get; set; }
    [Parameter] public bool Virtualize { get; set; }
    [Parameter] public string? LoadingText { get; set; }
    [Parameter] public int OverscanCount { get; set; }
    [Parameter] public int ItemSize { get; set; }
    [Parameter] public string ListHeight { get; set; }
    [Parameter] public string ItemHeight { get; set; }
    [Parameter] public RenderFragment<Person> RowTemplate { get; set; }

    //private string defualtListHeight = "500px";
    public class Person
    {
        public int Id { get; set; }
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string Job { get; set; }
    }
}
