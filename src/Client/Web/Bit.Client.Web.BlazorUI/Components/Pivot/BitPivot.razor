@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">
    <CascadingValue Value="this"
                    IsFixed="true">
        <div>
            @foreach (var item in Items)
            {
                <div @onclick="() => ItemClicked(item)"
                     class="@(Items[SelectedKey] == item.Value ? "selected-item" : string.Empty)"
                     style="@(item.Value.Visibility == ComponentVisibility.Collapsed ? "display:none" : item.Value.Visibility == ComponentVisibility.Hidden ? "visibility:hidden" : string.Empty)">
                    @if (item.Value.IconName is not null)
                    {
                        <i class="bit-icon bit-icon--@(item.Value.IconName)"></i>
                    }

                    @item.Value.HeaderText

                    @if (item.Value.ItemCount is not null)
                    {
                        @($" ({item.Value.ItemCount}) ")
                    }

                    @item.Value.HeaderContent
                </div>
            }
        </div>
        <div>
            @ChildContent
        </div>
    </CascadingValue>
</div>