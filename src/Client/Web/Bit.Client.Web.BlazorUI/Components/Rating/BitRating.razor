@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="Element" style="@GetElementStyle()"
     class="@GetElementClass()">

    @switch (IconType)
    {
        case IconType.Star:
            for (int item = 1; item <= IconCount; item++)
            {
                int index = item;
                <svg width="@(IconWidth)px"
                     height="@(IconHeight)px"
                     viewBox="64 -59 228.6 218">
                    <polygon style="fill:@FirstCurrentColor[index]"
                             @onclick="()=> HandleClick(index,IconSide.Left)"
                             @onmousemove="()=>HandleMouseMove(index,IconSide.Left)"
                             @onmouseout="()=>HandelMouseOut()"
                             points="146.7,17.6 64,23.9 127.1,77.7 107.5,158.3 178.2,114.9 178.3,-59">
                    </polygon>
                    <polygon style="fill:@SecondCurrentColor[index]"
                             @onclick="()=> HandleClick(index,IconSide.Right)"
                             @onmousemove="()=>HandleMouseMove(index,IconSide.Right)"
                             @onmouseout="()=>HandelMouseOut()"
                             points="292.6,24.1 209.9,17.7 178.3,-59 178.2,114.9 248.8,158.4 229.4,77.8">
                    </polygon>
                </svg>
            }
            break;
        case IconType.Heart:
            for (int item = 1; item <= IconCount; item++)
            {
                int index = item;
                <svg width="@(IconWidth)px"
                     height="@(IconHeight)px"
                     viewBox="0 0 32 29.6"
                     style="fill: @FirstCurrentColor[index]"
                     @onclick="()=>HandleClick(index)"
                     @onmousemove="()=>HandleMouseMove(index)"
                     @onmouseout="()=>HandelMouseOut()">
                    <path d="M23.6,0c-3.4,0-6.3,2.7-7.6,5.6C14.7,2.7,11.8,0,8.4,0C3.8,0,0,3.8,0,8.4c0,9.4,9.5,11.9,16,21.2  c6.1-9.3,16-12.1,16-21.2C32,3.8,28.2,0,23.6,0z" />
                </svg>
            }
            break;
    }
    @if (ShowIconCount)
    {
        <span class="bit-rating-counter" style="margin-left: 30px;">@IconSelectedCount</span>
    }
</div>
