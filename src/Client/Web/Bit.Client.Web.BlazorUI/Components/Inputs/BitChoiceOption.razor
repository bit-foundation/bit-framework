@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div style="@GetElementStyle()" 
     class="@GetElementClass() @CheckedClass">
    <input id="@Id"
           type="radio"
           checked=@IsChecked
           name="@Name"
           value="@Value"
           hidden
           @onclick="@HandleClick"
           @onchange="@HandleChange"/>
    <label for="@Id">
        <span>
            @Text
        </span>
    </label>
</div>