@namespace Bit.Client.Web.BlazorUI
@inherits BitComponentBase

<div @ref="RootElement"
     style="@StyleBuilder.Value"
     class="@ClassBuilder.Value">
    <input id="@Id"
           type="radio"
           checked=@IsChecked
           name="@Name"
           value="@Value"
           hidden
           @onclick="@HandleClick"
           @onchange="@HandleChange" />
    <label for="@Id">
        <span>
            @Text
        </span>
    </label>
</div>